{
  "compilerOptions": {
    "target": "es6",                                  
    "module": "es6",                                
    "outDir": "./dist",      
    "rootDir": "./src",                             
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,            
    "strict": true,                                      
    "skipLibCheck": true,
    "moduleResolution": "node",
    "allowJs":true ,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
  },
  "exclude":[
    "node_modules",
    "dist"
  ]   
}
